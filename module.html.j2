<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ module.name }}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/picnic">
    <link href="style.css" rel="stylesheet">
</head>
<body data-next-module="{{ next_module_file }}">
    <div class="container">
        <header>
            <div class="header-flex">
                <h1>{{ module.name }} Questions</h1>
                <div class="header-actions">
                    <a href="index.html" class="header-btn">Home</a>
                    <a href="leaderboard.html" class="header-btn">Leaderboard</a>
                </div>
            </div>
        </header>
        <div class="main-layout">
            <aside>
                <nav>
                    <ul>
                        <li><strong>Modules</strong></li>
                    </ul>
                    <ul>
                        {% for m in modules %}
                        <li><a href="{{ m.html_file }}" {% if m.name == module.name %}class="current"{% endif %}>{{ m.name }}</a></li>
                        {% endfor %}
                    </ul>
                </nav>
            </aside>
            <main>
                <div class="levels-grid">
                    {% for item in module.questions %}
                        <button class="level-btn" data-index="{{ loop.index0 }}" style="grid-column: {{ (loop.index0 % 5) + 1 }};">
                            Niveau {{ loop.index }}
                        </button>
                    {% endfor %}
                </div>
                <div id="question-container" style="display:none;"></div>
            </main>
        </div>
    </div>
    <script src="script.js"></script>
</body>
</body>
<script>
window.moduleQuestions = [
{% for item in module.questions %}
    {
        question: {{ item.question | tojson }},
        answer: {{ item.answer | tojson }}
    }{% if not loop.last %},{% endif %}
{% endfor %}
];
</script>
</html>
